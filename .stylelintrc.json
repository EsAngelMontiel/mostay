      "background-origin",
      "box-shadow",
      "fill",
      "stroke",
      "color",
      "font",
      "font-family",
      "font-size",
      "font-style",
      "font-variant",
      "font-weight",
      "font-stretch",
      "font-size-adjust",
      "line-height",
      "text-align",
